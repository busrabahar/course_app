<h1>Students New Form</h1>

<% if flash[:errors] %>
	<% flash[:errors].each do |error| %>
		<p style = "color: red"><%= error %>
	<% end %>
<% end %>

<%= form_for @student do |f| %> <!-- form_for takes the variable created from the new method -->
	<%= f.label :name %>
	<%= f.text_field :name %>
	<%= f.label :age %>
	<%= f.number_field :age %>

	<%= f.submit %>
<% end %>